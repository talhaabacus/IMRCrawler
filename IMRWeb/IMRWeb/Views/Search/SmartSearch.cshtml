
@{
    ViewBag.Title = "Smart Search";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Smart Search

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> IMR Web Search</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div id="invalidsearchstring" class="callout callout-warning hidden">
        <h4>Error!</h4>

        <p>Please enter a proper search  string, special characters are not allowed. "," only allowed with IN and NOT IN operators.</p>
    </div>
    <div id="noresults" class="callout callout-info hidden">
        <h4>Info!</h4>
        <p>Search returned no results</p>
    </div>
    <form id="search-form" name="search-form">
        <div class="box box-default">
            <input type="hidden" id="hdTotalSearch" value="1" />
            <div class="box-body">
                <div class="form-group">
                    <span>Where:</span>
                </div>
                <div class="form-group">
                    <table class="table no-border" id="tbSearchCriteria"></table>


                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary" onclick="return searchsmart()">Search</button>
                </div>
            </div>
        </div>
        <div class="box box-default">
            <div class="box-body">
                <div class="form-group">
                    <div id="tablediv">
                        <table class="table"></table>
                    </div>
                    <div id="page-selection"></div>
                </div>
            </div>
        </div>

        <!-- /.box -->
    </form>

</section>
<!-- /.content -->
<div role="dialog" tabindex="-1" class="modal modal-wide" id="view-dialog">
    <div class="modal-dialog full-screen" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 id="head" class="modal-title"></h4>
            </div>
            <div id="body" class="modal-body">


            </div>
            <div id="footer" class="modal-footer">

            </div>
        </div>
    </div>
</div>
<div role="dialog" tabindex="-1" class="modal" id="loader-dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header no-border">

                <h4 class="modal-title">Please Wait.....</h4>
            </div>
            <div class="modal-body">
                <img src="~/images/loader.gif"  class="img-responsive"/>
             </div>
            <div class="modal-footer no-border">

            </div>
        </div>
    </div>
</div>

